<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:padding="16dp">

    <!-- Layout chính chứa toàn bộ nội dung -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card dịch: chứa Spinner chọn ngôn ngữ, EditText nhập văn bản, nút dịch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Dòng chọn ngôn ngữ: spinner source + nút hoán đổi + spinner target -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <!-- Spinner chọn ngôn ngữ nguồn -->
                    <Spinner
                        android:id="@+id/spinnerSource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- Nút hoán đổi ngôn ngữ -->
                    <Button
                        android:id="@+id/btnSwap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="↔"
                        android:layout_marginHorizontal="8dp"
                        android:backgroundTint="#2196F3"
                        android:textColor="@android:color/white" />

                    <!-- Spinner chọn ngôn ngữ đích -->
                    <Spinner
                        android:id="@+id/spinnerTarget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <!-- Ô nhập văn bản cần dịch -->
                <EditText
                    android:id="@+id/edtInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="4"
                    android:gravity="top|start"
                    android:background="@android:drawable/edit_text"
                    android:hint="Nhập văn bản cần dịch"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:inputType="textMultiLine" />

                <!-- Nút thực hiện dịch -->
                <Button
                    android:id="@+id/btnTranslate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dịch"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card kết quả dịch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TextView hiển thị kết quả dịch -->
                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="4"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:hint="Bản dịch sẽ hiện ở đây"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textColor="#000000" />

                <!-- Các nút xử lý kết quả: sao chép, đọc văn bản -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <!-- Nút sao chép kết quả -->
                    <Button
                        android:id="@+id/btnCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📋"
                        android:backgroundTint="#3F51B5"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp" />

                    <!-- Nút phát âm kết quả -->
                    <Button
                        android:id="@+id/btnSpeak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔊"
                        android:backgroundTint="#FF9800"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tiêu đề lịch sử dịch -->
        <TextView
            android:id="@+id/txtHistoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch sử dịch"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textColor="#333333" />

        <!-- RecyclerView hiển thị lịch sử dịch (1) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <!-- Nút xóa lịch sử dịch -->
        <Button
            android:id="@+id/btnClearHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa lịch sử"
            android:layout_marginTop="8dp" />

        <!-- RecyclerView hiển thị lịch sử dịch (2) - ID trùng -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHistory"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#F5F5F5"
            tools:ignore="DuplicateIds" /> <!-- ⚠️ ID bị trùng -->

    </LinearLayout>

</ScrollView>
