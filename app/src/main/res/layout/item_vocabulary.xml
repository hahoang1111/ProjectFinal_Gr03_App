<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBFBFB"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:elevation="2dp">

    <!-- Từ tiếng Anh và Phát âm + Lưu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvEnglishWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word"
                android:textColor="#D81B60"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPhonetic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="/ˈwɜːrd/"
                android:textColor="#0288D1"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnBookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:src="@drawable/outline_bookmarks_24"
            android:contentDescription="Bookmark icon" />
    </LinearLayout>

    <!-- Loại từ -->
    <TextView
        android:id="@+id/tvPartOfSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Loại từ: Noun"
        android:textColor="#388E3C"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Nghĩa tiếng Việt -->
    <TextView
        android:id="@+id/tvVietnameseMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nghĩa: ..."
        android:textColor="#212121"
        android:textSize="16sp" />

    <!-- Ví dụ -->
    <TextView
        android:id="@+id/tvExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Ví dụ: ..."
        android:textColor="#78909C"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light" />

</LinearLayout>
