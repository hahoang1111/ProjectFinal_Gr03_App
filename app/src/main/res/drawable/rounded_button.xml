<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#388E3C"/> <!-- Màu khi nhấn -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Trạng thái mặc định (khi không nhấn) -->
    <item>
        <shape>
            <solid android:color="#4CAF50"/> <!-- Màu mặc định -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
